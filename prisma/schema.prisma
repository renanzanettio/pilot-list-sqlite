generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  senha    String

  // Relação com alunos
  alunos   Aluno[]
}

model Aluno {
  id        Int      @id @default(autoincrement())
  ra        String   // RA como texto para manter zeros à esquerda
  nome      String
  datanasc  DateTime // formato Date
  escola    String

  // Chave estrangeira
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}
